function prime(x) {
    
    // if 1, not prime
    if ( x == 1 ) {
        return false;
    }
    
    // run through number
    for (var i = 2; i < x; i++) {
        // if it has a multiple, not prime
        if ( x % i === 0 ) {
            return false; 
        }
    }
    //number is prime
    return true;
}

function lpf(x) {
    
    
    // run through number except 1 and itself
    for (var i = x - 1; i > 1; i--) {
        
        // if multiple found
        if ( x % i === 0 ) {
            
            // if multiple is prime
            if (prime(i)) {
                return i;
            }
       }
       i--;
   }
}
